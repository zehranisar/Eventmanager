<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Reminder"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="When would you like to be reminded?"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/darker_gray" />

    <RadioGroup
        android:id="@+id/rgReminderTiming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb1Day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 Day Before"
            android:textSize="16sp"
            android:padding="12dp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rb12Hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12 Hours Before"
            android:textSize="16sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/rb6Hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6 Hours Before"
            android:textSize="16sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/rb3Hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 Hours Before"
            android:textSize="16sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/rb1Hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 Hour Before"
            android:textSize="16sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/rb30Minutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30 Minutes Before"
            android:textSize="16sp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/rb15Minutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15 Minutes Before"
            android:textSize="16sp"
            android:padding="12dp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@android:color/darker_gray"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnSetReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Reminder"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>

